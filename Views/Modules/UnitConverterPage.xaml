<UserControl x:Class="SwissKnifeApp.Views.Modules.UnitConverterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lucide="clr-namespace:LucideIcons;assembly=LucideIcons"
             xmlns:local="clr-namespace:SwissKnifeApp.Views.Modules"
             Background="{DynamicResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock Text="Birim ve Zaman Dönüştürücü"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="SteelBlue"
                   Margin="0,0,0,20"/>

        <!-- TabControl ile Bölümler -->
        <TabControl Grid.Row="1">
            
            <!-- Birim Dönüştürücü Sekmesi -->
            <TabItem Header="Birim Dönüştürücü">
                <Border Padding="20"
                        Background="#f5f7fa"
                        CornerRadius="15"
                        BorderBrush="#ddd"
                        BorderThickness="1"
                        Margin="10">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="450">

                        <!-- Birim Türü -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
                            <lucide:Icon LucideIcon="Settings2" Width="22" Height="22" Margin="0,0,8,0" />
                            <TextBlock Text="Birim Türü:" VerticalAlignment="Center" FontWeight="SemiBold" />
                            <ComboBox x:Name="cmbUnitType"
                                      Width="180"
                                      Margin="10,0,0,0"
                                      SelectedIndex="0"
                                      SelectionChanged="cmbUnitType_SelectionChanged">
                                <ComboBoxItem Content="Uzunluk" />
                                <ComboBoxItem Content="Ağırlık" />
                                <ComboBoxItem Content="Sıcaklık" />
                            </ComboBox>
                        </StackPanel>

                        <!-- Kaynak / Hedef -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                            <ComboBox x:Name="cmbFrom" Width="150"/>
                            <lucide:Icon LucideIcon="ArrowRightLeft" Width="28" Height="28" VerticalAlignment="Center" Margin="10,0"/>
                            <ComboBox x:Name="cmbTo" Width="150"/>
                        </StackPanel>

                        <!-- Değer Girişi -->
                        <TextBox x:Name="txtValue"
                                 Width="200"
                                 Height="35"
                                 FontSize="14"
                                 Margin="0,0,0,15"
                                 HorizontalAlignment="Center"
                                 TextAlignment="Center" />

                        <!-- Dönüştür Butonu -->
                        <Button Width="180"
                                Height="45"
                                Margin="0,0,0,15"
                                Style="{StaticResource AccentButtonStyle}"
                                Click="ConvertButton_Click">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <lucide:Icon LucideIcon="Calculator" Width="24" Height="24" Margin="0,0,8,0"/>
                                <TextBlock Text="Dönüştür" FontSize="15"/>
                            </StackPanel>
                        </Button>

                        <!-- Sonuç -->
                        <Border Background="White" CornerRadius="8" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Sonuç:"
                                           FontWeight="Bold"
                                           Foreground="Gray"/>
                                <TextBlock x:Name="txtResult"
                                           Text="0"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="Black"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Border>
            </TabItem>

            <!-- Zaman Araçları Sekmesi -->
            <TabItem Header="Zaman Araçları">
                <Border Padding="20"
                        Background="#f5f7fa"
                        CornerRadius="15"
                        BorderBrush="#ddd"
                        BorderThickness="1"
                        Margin="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="550">
                            <TextBlock Text="Zaman ve Tarih Araçları"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="DarkSlateBlue"
                                       Margin="0,0,0,15"/>

                            <!-- Timestamp Dönüştürücü -->
                            <GroupBox Header="Timestamp Dönüştürücü" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBox x:Name="txtTimestamp"
                                             Height="32"
                                             FontSize="14"
                                             Margin="0,5,0,10"
                                             TextAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Timestamp → Tarih"
                                                Width="150"
                                                Height="32"
                                                Margin="5"
                                                Click="TimestampToDate_Click"
                                                Style="{StaticResource AccentButtonStyle}"/>
                                        <Button Content="Tarih → Timestamp"
                                                Width="150"
                                                Height="32"
                                                Margin="5"
                                                Click="DateToTimestamp_Click"
                                                Style="{StaticResource AccentButtonStyle}"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>

                            <!-- Zaman Aralığı Hesaplama -->
                            <GroupBox Header="Zaman Aralığı Hesaplama" Margin="0,0,0,15">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,10">
                                        <StackPanel Margin="0,0,10,0">
                                            <TextBlock Text="Başlangıç Tarihi:" FontSize="12" Margin="0,0,0,5"/>
                                            <TextBox x:Name="txtDate1" Width="180" Height="32" FontSize="14" TextAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="Bitiş Tarihi:" FontSize="12" Margin="0,0,0,5"/>
                                            <TextBox x:Name="txtDate2" Width="180" Height="32" FontSize="14" TextAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Button Content="Zaman Aralığı Hesapla"
                                            Width="180"
                                            Height="32"
                                            HorizontalAlignment="Center"
                                            Click="CalculateTimeSpan_Click"
                                            Style="{StaticResource AccentButtonStyle}"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- Yaş Hesaplama -->
                            <GroupBox Header="Yaş Hesaplama" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Doğum Tarihi (gg.aa.yyyy):" FontSize="12" Margin="0,5,0,5"/>
                                    <TextBox x:Name="txtBirthDate"
                                             Height="32"
                                             FontSize="14"
                                             Margin="0,0,0,10"
                                             TextAlignment="Center"/>
                                    <Button Content="Yaş Hesapla (Bugüne Göre)"
                                            Width="180"
                                            Height="32"
                                            HorizontalAlignment="Center"
                                            Click="CalculateAge_Click"
                                            Style="{StaticResource AccentButtonStyle}"/>
                                    
                                    <Separator Margin="0,15,0,15"/>
                                    
                                    <TextBlock Text="İki Tarih Arası Yaş Hesaplama:" FontSize="12" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                        <StackPanel Margin="0,0,10,0">
                                            <TextBlock Text="Başlangıç Tarihi:" FontSize="11" Margin="0,0,0,5"/>
                                            <TextBox x:Name="txtAgeStartDate" Width="150" Height="32" FontSize="14" TextAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="Bitiş Tarihi:" FontSize="11" Margin="0,0,0,5"/>
                                            <TextBox x:Name="txtAgeEndDate" Width="150" Height="32" FontSize="14" TextAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Button Content="İki Tarih Arası Yaş Hesapla"
                                            Width="200"
                                            Height="32"
                                            HorizontalAlignment="Center"
                                            Click="CalculateAgeBetweenDates_Click"
                                            Style="{StaticResource AccentButtonStyle}"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- Zaman Dilimi Çevirici -->
                            <GroupBox Header="Zaman Dilimi Çevirici" Margin="0,0,0,15">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,10">
                                        <StackPanel Margin="0,0,10,0">
                                            <TextBlock Text="Kaynak Dilim:" FontSize="12" Margin="0,0,0,5"/>
                                            <TextBox x:Name="txtTimeZoneSource" Width="120" Height="32" FontSize="14" TextAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,10,0">
                                            <TextBlock Text="Hedef Dilim:" FontSize="12" Margin="0,0,0,5"/>
                                            <TextBox x:Name="txtTimeZoneTarget" Width="120" Height="32" FontSize="14" TextAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="Tarih/Saat:" FontSize="12" Margin="0,0,0,5"/>
                                            <TextBox x:Name="txtTimeZoneDate" Width="180" Height="32" FontSize="14" TextAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Button Content="Zaman Dilimi Çevir"
                                            Width="150"
                                            Height="32"
                                            HorizontalAlignment="Center"
                                            Click="ConvertTimeZone_Click"
                                            Style="{StaticResource AccentButtonStyle}"/>
                                    <TextBlock Text="Örnek: 'Turkey Standard Time', 'UTC', 'Eastern Standard Time'"
                                               FontSize="11"
                                               Foreground="Gray"
                                               TextWrapping="Wrap"
                                               Margin="0,5,0,0"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- Sonuç Alanı -->
                            <Border Background="White"
                                    CornerRadius="8"
                                    Padding="15"
                                    BorderBrush="#ddd"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Sonuç:"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Foreground="Gray"/>
                                    <TextBlock x:Name="txtTimeResult"
                                               FontSize="16"
                                               Foreground="Black"
                                               Margin="0,5,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
