<Page x:Class="SwissKnifeApp.Views.Modules.PasswordToolsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Şifre Araçları">

    <Grid Margin="20">
        <TabControl>
            <!-- 1️⃣ Şifre Oluşturucu -->
            <TabItem Header="🔑 Şifre Oluşturucu">
                <StackPanel Margin="20">
                    <TextBlock Text="Şifre Uzunluğu:" FontWeight="Bold"/>
                    <Slider x:Name="SliderLength" Minimum="6" Maximum="32" Value="12" TickFrequency="1" IsSnapToTickEnabled="True"/>
                    <TextBlock Text="{Binding ElementName=SliderLength, Path=Value, StringFormat='Uzunluk: {0}'}"/>

                    <CheckBox x:Name="ChkUpper" Content="Büyük Harf (A-Z)" IsChecked="True"/>
                    <CheckBox x:Name="ChkLower" Content="Küçük Harf (a-z)" IsChecked="True"/>
                    <CheckBox x:Name="ChkNumbers" Content="Rakamlar (0-9)" IsChecked="True"/>
                    <CheckBox x:Name="ChkSymbols" Content="Semboller (!@#$...)" IsChecked="True"/>

                    <Button x:Name="BtnGenerate" Content="🔁 Şifre Oluştur" Click="BtnGenerate_Click" Margin="0,10"/>
                    <TextBox x:Name="TxtGenerated" FontSize="16" FontWeight="Bold" TextAlignment="Center" IsReadOnly="True"/>
                    <Button Content="📋 Kopyala" Click="BtnCopyPassword_Click"/>
                </StackPanel>
            </TabItem>

            <!-- 2️⃣ Şifre Gücü Analizi -->
            <TabItem Header="🧮 Şifre Gücü Analizi">
                <StackPanel Margin="20">
                    <TextBox x:Name="TxtPasswordCheck" FontSize="14"/>
                    <ProgressBar x:Name="ProgressStrength" Height="20" Minimum="0" Maximum="100"/>
                    <TextBlock x:Name="TxtStrengthLabel" FontWeight="Bold" FontSize="14"/>
                    <Button Content="🔍 Analiz Et" Click="BtnAnalyze_Click"/>
                </StackPanel>
            </TabItem>

            <!-- 3️⃣ Hash Üretici -->
            <TabItem Header="🧱 Hash Üretici">
                <StackPanel Margin="20">
                    <TextBox x:Name="TxtHashInput" FontSize="14"/>
                    <ComboBox x:Name="CmbHashAlgo" SelectedIndex="0">
                        <ComboBoxItem Content="MD5"/>
                        <ComboBoxItem Content="SHA1"/>
                        <ComboBoxItem Content="SHA256"/>
                        <ComboBoxItem Content="SHA512"/>
                    </ComboBox>
                    <Button Content="🔐 Hash Üret" Click="BtnHash_Click"/>
                    <TextBox x:Name="TxtHashResult" IsReadOnly="True" TextWrapping="Wrap" FontFamily="Consolas"/>
                    <Button Content="📋 Kopyala" Click="BtnCopyHash_Click"/>
                </StackPanel>
            </TabItem>

            <!-- 4️⃣ AES Şifreleme / Çözme -->
            <TabItem Header="⚙️ AES Şifreleme / Çözme">
                <StackPanel Margin="20">
                    <TextBox x:Name="TxtAesInput" FontSize="14"/>
                    <PasswordBox x:Name="TxtAesKey"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="🔒 Şifrele" Click="BtnEncrypt_Click"/>
                        <Button Content="🔓 Çöz" Click="BtnDecrypt_Click"/>
                    </StackPanel>
                    <TextBox x:Name="TxtAesOutput" IsReadOnly="True" TextWrapping="Wrap" FontFamily="Consolas"/>
                    <Button Content="📋 Kopyala" Click="BtnCopyAes_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
