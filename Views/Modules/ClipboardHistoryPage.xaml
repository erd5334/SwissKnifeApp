<Page x:Class="SwissKnifeApp.Views.Modules.ClipboardHistoryPage"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ClipboardHistoryPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Üst Başlık -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 10">
            <TextBlock Text="📋 Panoya Kopyalanan Öğeler" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBox x:Name="SearchBox" Width="250" Height="30" Margin="30 0 0 0"
                     TextChanged="SearchBox_TextChanged"/>
        </StackPanel>

        <!-- Butonlar -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10" Grid.Row="0">
            <Button Content="🔄 Yenile" Width="100" Click="Refresh_Click"/>
            <Button Content="🗑️ Tümünü Temizle" Width="150" Click="Clear_Click"/>
            <Button Content="💾 Dışa Aktar" Width="120" Click="Save_Click"/>
            <Button Content="📂 İçe Aktar" Width="120" Click="Load_Click"/>
        </StackPanel>

        <!-- Liste -->
        <ListView x:Name="ClipboardList"
                  Grid.Row="1"
                  Margin="0,50,0,0"
                  MouseDoubleClick="ClipboardList_MouseDoubleClick"
                  SelectionChanged="ClipboardList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Zaman" Width="150" DisplayMemberBinding="{Binding Time}"/>
                    <GridViewColumn Header="Tür" Width="100" DisplayMemberBinding="{Binding Type}"/>
                    <GridViewColumn Header="İçerik" Width="400" DisplayMemberBinding="{Binding Preview}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Görsel Önizleme Popup -->
        <Popup x:Name="ImagePopup" Placement="Center" StaysOpen="False">
            <Border Background="White" BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Padding="10">
                <StackPanel>
                    <Image x:Name="PopupImage" Width="400" Height="400" Stretch="Uniform"/>
                    <Button Content="Kapat" Margin="0,10,0,0" Click="ClosePopup_Click"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Page>
