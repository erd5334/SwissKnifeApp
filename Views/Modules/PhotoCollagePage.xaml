<Page x:Class="SwissKnifeApp.Views.Modules.PhotoCollagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      Title="Fotoğraf Kolaj Yapıcı">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="📸 Fotoğraf Kolaj Yapıcı" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#2196F3"/>
            <TextBlock Text="Fotoğraflarınızı birleştirin ve güzel kolajlar oluşturun" 
                       FontSize="14" 
                       Foreground="#666"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Ana İçerik -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sol Panel - Ayarlar -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    
                    <!-- Şablon Seçimi -->
                    <GroupBox Header="📐 Kolaj Şablonu" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <TextBlock Text="Şablon:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="CmbTemplate" SelectionChanged="CmbTemplate_SelectionChanged">
                                <ComboBoxItem Content="2 Fotoğraf (Yatay)" Tag="2H"/>
                                <ComboBoxItem Content="2 Fotoğraf (Dikey)" Tag="2V"/>
                                <ComboBoxItem Content="3 Fotoğraf (2+1)" Tag="3"/>
                                <ComboBoxItem Content="4 Fotoğraf (2x2)" Tag="4" IsSelected="True"/>
                                <ComboBoxItem Content="4 Fotoğraf (1+3)" Tag="4_1_3"/>
                                <ComboBoxItem Content="5 Fotoğraf (2+3)" Tag="5"/>
                                <ComboBoxItem Content="6 Fotoğraf (3x2)" Tag="6"/>
                                <ComboBoxItem Content="8 Fotoğraf (2+2+4)" Tag="8"/>
                                <ComboBoxItem Content="9 Fotoğraf (3x3)" Tag="9"/>
                                <ComboBoxItem Content="12 Fotoğraf (4x3)" Tag="12"/>
                                <ComboBoxItem Content="16 Fotoğraf (4x4)" Tag="16"/>
                            </ComboBox>
                        </StackPanel>
                    </GroupBox>

                    <!-- Fotoğraf Yönetimi -->
                    <GroupBox Header="🖼️ Fotoğraflar" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <Button x:Name="BtnAddPhotos" 
                                    Click="BtnAddPhotos_Click"
                                    Padding="10,8"
                                    Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="FolderMultipleImage" 
                                                              Width="18" 
                                                              Height="18"
                                                              Margin="0,0,5,0"/>
                                    <TextBlock Text="Fotoğraf Ekle" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="BtnClearPhotos" 
                                    Click="BtnClearPhotos_Click"
                                    Padding="10,8"
                                    Background="#F44336">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="DeleteEmpty" 
                                                              Width="18" 
                                                              Height="18"
                                                              Margin="0,0,5,0"/>
                                    <TextBlock Text="Tümünü Temizle" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <TextBlock x:Name="TxtPhotoCount" 
                                       Text="Yüklenen: 0 fotoğraf" 
                                       Margin="0,10,0,0"
                                       FontSize="12"
                                       Foreground="#666"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Arka Plan -->
                    <GroupBox Header="🎨 Arka Plan" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <TextBlock Text="Renk:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <mah:ColorPicker x:Name="ColorPickerBackground" SelectedColorChanged="ColorPickerBackground_SelectedColorChanged" SelectedColor="#FFFFFF" Margin="0,0,0,10"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Kenarlık Ayarları -->
                    <GroupBox Header="🔲 Kenarlık" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <TextBlock Text="Kalınlık:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Slider x:Name="SliderBorderWidth" 
                                    Minimum="0" 
                                    Maximum="50" 
                                    Value="10"
                                    TickFrequency="5"
                                    IsSnapToTickEnabled="True"
                                    ValueChanged="SliderBorderWidth_ValueChanged"/>
                            <TextBlock x:Name="TxtBorderWidth" 
                                       Text="10 px" 
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,10"/>

                            <TextBlock Text="Renk:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                            <mah:ColorPicker x:Name="ColorPickerBorder" SelectedColorChanged="ColorPickerBorder_SelectedColorChanged" SelectedColor="#FFFFFF" Margin="0,0,0,10"/>

                            <TextBlock Text="Yuvarlaklık:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                            <Slider x:Name="SliderCornerRadius" 
                                    Minimum="0" 
                                    Maximum="30" 
                                    Value="0"
                                    TickFrequency="5"
                                    IsSnapToTickEnabled="True"
                                    ValueChanged="SliderCornerRadius_ValueChanged"/>
                            <TextBlock x:Name="TxtCornerRadius" 
                                       Text="0 px" 
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Metin Ekleme -->
                    <GroupBox Header="✏️ Metin" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <TextBox x:Name="TxtOverlayText" 
                                     mah:TextBoxHelper.Watermark="Metin ekle (opsiyonel)"
                                     TextChanged="TxtOverlayText_TextChanged"
                                     Margin="0,0,0,10"/>

                            <TextBlock Text="Boyut:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <mah:NumericUpDown x:Name="NumFontSize" 
                                             Value="24" 
                                             Minimum="12" 
                                             Maximum="72"
                                             ValueChanged="NumFontSize_ValueChanged"
                                             Margin="0,0,0,10"/>
                            <TextBlock Text="Konum:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="CmbTextPosition" SelectionChanged="CmbTextPosition_SelectionChanged" Margin="0,0,0,10">
                                <ComboBoxItem Content="Sol Üst" Tag="TopLeft" IsSelected="True"/>
                                <ComboBoxItem Content="Orta Üst" Tag="TopCenter"/>
                                <ComboBoxItem Content="Sağ Üst" Tag="TopRight"/>
                                <ComboBoxItem Content="Sol Alt" Tag="BottomLeft"/>
                                <ComboBoxItem Content="Orta Alt" Tag="BottomCenter"/>
                                <ComboBoxItem Content="Sağ Alt" Tag="BottomRight"/>
                                <ComboBoxItem Content="Ortada" Tag="Center"/>
                            </ComboBox>

                            <TextBlock Text="Renk:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <mah:ColorPicker x:Name="ColorPickerText" SelectedColorChanged="ColorPickerText_SelectedColorChanged" SelectedColor="#FFFFFF" Margin="0,0,0,10"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Kaydetme -->
                    <GroupBox Header="💾 Kaydet" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <TextBlock Text="Boyut:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="CmbOutputSize" SelectedIndex="1">
                                <ComboBoxItem Content="800 x 800" Tag="800"/>
                                <ComboBoxItem Content="1200 x 1200" Tag="1200"/>
                                <ComboBoxItem Content="1920 x 1920" Tag="1920"/>
                                <ComboBoxItem Content="2400 x 2400" Tag="2400"/>
                            </ComboBox>

                            <TextBlock Text="Format:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                            <ComboBox x:Name="CmbOutputFormat" SelectedIndex="0">
                                <ComboBoxItem Content="PNG" Tag="png"/>
                                <ComboBoxItem Content="JPG" Tag="jpg"/>
                            </ComboBox>

                            <Button x:Name="BtnSaveCollage" 
                                    Click="BtnSaveCollage_Click"
                                    Padding="10,12"
                                    Margin="0,15,0,0"
                                    Background="#4CAF50">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="ContentSave" 
                                                              Width="20" 
                                                              Height="20"
                                                              Margin="0,0,8,0"/>
                                    <TextBlock Text="Kolajı Kaydet" 
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold"
                                               FontSize="14"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </GroupBox>

                </StackPanel>
            </ScrollViewer>

            <!-- Sağ Panel - Önizleme -->
            <Border Grid.Column="2" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Background="#F5F5F5">
                <Grid>
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                x:Name="EmptyState">
                        <iconPacks:PackIconMaterial Kind="ImageMultiple" 
                                                  Width="64" 
                                                  Height="64"
                                                  Foreground="#CCCCCC"
                                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Önizleme" 
                                   FontSize="18" 
                                   Foreground="#999"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,5"/>
                        <TextBlock Text="Fotoğraf ekleyerek başlayın" 
                                   FontSize="14" 
                                   Foreground="#BBB"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Önizleme Canvası -->
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                  VerticalScrollBarVisibility="Auto"
                                  x:Name="PreviewScroller">
                        <Canvas x:Name="PreviewCanvas" 
                                Width="600" 
                                Height="600"
                                Background="White"
                                AllowDrop="True"
                                Drop="PreviewCanvas_Drop"
                                DragOver="PreviewCanvas_DragOver"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
