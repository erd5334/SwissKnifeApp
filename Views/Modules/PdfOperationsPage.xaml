<Page x:Class="SwissKnifeApp.Views.Modules.PdfOperationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="PDF İşlemleri">

    <Grid Margin="0,10,0,0">
        <TextBlock Text="📄 PDF İşlemleri"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,16"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">

                <!-- 🧩 Temel PDF İşlemleri -->
                <GroupBox Header="🧩 1. Temel PDF İşlemleri" Margin="0,40,0,0">
                    <WrapPanel Margin="8" ItemWidth="220" ItemHeight="50">
                        <Button Content="📄 PDF Birleştir" Click="BtnMerge_Click" Margin="4"/>
                        <Button Content="✂️ PDF Böl" Click="BtnSplit_Click" Margin="4"/>
                        <Button Content="🔄 PDF’den Görsel Çıkar" Click="BtnExtractImages_Click" Margin="4"/>
                        <Button Content="🖼️ Görsellerden PDF Oluştur" Click="BtnImagesToPdf_Click" Margin="4"/>
                    </WrapPanel>
                </GroupBox>

                <!-- ⚙️ Gelişmiş Düzenleme -->
                <GroupBox Header="⚙️ 2. Gelişmiş Düzenleme Özellikleri">
                    <WrapPanel Margin="8" ItemWidth="220" ItemHeight="50">
                        <Button Content="📝 Metin/Görsel Ekle" Click="BtnAddContent_Click" Margin="4"/>
                        <Button Content="🔒 PDF Şifrele/Kaldır" Click="BtnEncrypt_Click" Margin="4"/>
                        <Button Content="✍️ Filigran Ekle" Click="BtnWatermark_Click" Margin="4"/>
                        <Button Content="🗜️ PDF Sıkıştır" Click="BtnCompress_Click" Margin="4"/>
                    </WrapPanel>
                </GroupBox>

                <!-- 🧠 Profesyonel Mod -->
                <GroupBox Header="🧠 3. Profesyonel Mod">
                    <WrapPanel Margin="8" ItemWidth="220" ItemHeight="50">
                        <Button Content="🧮 PDF’den Veri Oku" Click="BtnReadText_Click" Margin="4"/>
                        <Button Content="🧰 Toplu PDF İşle" Click="BtnBatchProcess_Click" Margin="4"/>
                    </WrapPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
