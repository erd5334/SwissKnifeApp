<Page x:Class="SwissKnifeApp.Views.Modules.SpeedTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="İnternet Hız Testi"
      Background="#F9FAFB">

    <Grid Margin="40">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="🌐 İnternet Hız Testi" FontSize="28" FontWeight="Bold" Foreground="#2D3748" TextAlignment="Center"/>

            <Button x:Name="btnStartTest"
                    Content="Hız Testini Başlat 🚀"
                    Click="btnStartTest_Click"
                    Height="45"
                    Background="#3B82F6"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderBrush="{x:Null}"/>

            <ProgressBar x:Name="progressBar" Height="8" IsIndeterminate="False" Minimum="0" Maximum="100"/>

            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <TextBlock x:Name="txtPing" Text="Ping: -" FontSize="18" TextAlignment="Center"/>
                <TextBlock x:Name="txtDownload" Text="İndirme: -" FontSize="18" TextAlignment="Center"/>
                <TextBlock x:Name="txtUpload" Text="Yükleme: -" FontSize="18" TextAlignment="Center"/>
            </StackPanel>

            <ListView x:Name="lvHistory" Margin="0,30,0,0" Height="150" BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Tarih" DisplayMemberBinding="{Binding Tarih}" Width="120"/>
                        <GridViewColumn Header="Ping (ms)" DisplayMemberBinding="{Binding Ping}" Width="80"/>
                        <GridViewColumn Header="İndirme (Mbps)" DisplayMemberBinding="{Binding Download}" Width="100"/>
                        <GridViewColumn Header="Yükleme (Mbps)" DisplayMemberBinding="{Binding Upload}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
