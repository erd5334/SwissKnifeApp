<UserControl x:Class="SwissKnifeApp.Views.Modules.DataAnalysisPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d"
             Background="Wheat">
    <!-- ALT SEKMELER (Orta / İleri Analiz) -->
    <TabControl Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,0">
        <TabItem Header="Temel Analiz">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ÜST BAŞLIK -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="📊 Veri Analiz Araçları"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="SteelBlue"/>
                    <Button Content="Dosya Aç" Width="120" Margin="20,0,0,0" Click="BtnOpenFile_Click"/>
                    <ComboBox x:Name="cmbChartType" Width="150" Margin="10,0"
                      SelectionChanged="CmbChartType_SelectionChanged">
                        <ComboBoxItem Content="Bar Grafiği" IsSelected="True"/>
                        <ComboBoxItem Content="Pasta Grafiği"/>
                        <ComboBoxItem Content="Çizgi Grafiği"/>
                        <ComboBoxItem Content="Dağılım Grafiği"/>
                    </ComboBox>
                    <Button Content="Rapor Oluştur" Width="140" Margin="10,0" Click="BtnExportReport_Click"/>
                </StackPanel>

                <!-- ANA GÖVDE -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- SOL PANEL: TABLO -->
                    <Border Grid.Column="0" BorderThickness="1" BorderBrush="#DDD" CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <DockPanel Grid.Row="0" Margin="5">
                                <TextBlock Text="Filtre:" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtFilter" Width="200" Margin="10,0" 
                                 VerticalAlignment="Center"
                                 TextChanged="TxtFilter_TextChanged"/>
                            </DockPanel>

                            <DataGrid x:Name="dataGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="True"
                              IsReadOnly="True"
                              AlternatingRowBackground="#F7F9FB"
                              CanUserSortColumns="True"
                              GridLinesVisibility="All"/>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,5" HorizontalAlignment="Left">
                                <TextBlock Text="Seçilen sütun:" FontWeight="Bold"/>
                                <ComboBox x:Name="cmbColumns" Width="150" Margin="10,0"/>
                                <Button Content="İstatistik Hesapla" Margin="10,0" Click="BtnStats_Click"/>
                                <Button Content="Korelasyon" Margin="10,0" Click="BtnCorrelation_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- SAĞ PANEL: OXY PLOT -->
                    <Border Grid.Column="1" BorderThickness="1" BorderBrush="#DDD" CornerRadius="8" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Grafik Görünümü"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="SteelBlue"
                               Margin="10"/>
                            <oxy:PlotView x:Name="oxyChart"
                                  Height="350"
                                  Margin="10"
                                  Background="White"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <TextBlock x:Name="txtStatsResult"
                   Grid.Row="2"
                   Margin="10"
                   FontFamily="Consolas"
                   FontSize="14"
                   Foreground="DarkSlateGray"
                   TextWrapping="Wrap"/>
            </Grid>

        </TabItem>

        <TabItem Header="Orta Analiz">
            <StackPanel Margin="10">
                <TextBlock Text="📊 Histogram ve Frekans Dağılımı"
                       FontWeight="Bold" FontSize="16" Foreground="SteelBlue"/>
                <ComboBox x:Name="cmbHistogramColumn" Width="200" Margin="0,10"/>
                <Button Content="Histogram Oluştur" Click="BtnHistogram_Click" Width="180"/>
                <oxy:PlotView x:Name="histogramChart" Height="300" Margin="0,10"/>
                <TextBlock x:Name="txtHistogramInfo" FontFamily="Consolas"/>
            </StackPanel>
        </TabItem>

        <TabItem Header="İleri Analiz">
            <StackPanel Margin="10">
                <TextBlock Text="📈 Regresyon Analizi" FontWeight="Bold" FontSize="16" Foreground="DarkRed"/>
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <ComboBox x:Name="cmbXColumn" Width="200" Margin="0,0,10,0"/>
                    <ComboBox x:Name="cmbYColumn" Width="200"/>
                    <Button Content="Regresyon Hesapla" Click="BtnRegression_Click" Width="180" Margin="10,0,0,0"/>
                </StackPanel>
                <oxy:PlotView x:Name="regressionChart" Height="300" Margin="0,10"/>
                <TextBlock x:Name="txtRegressionInfo" FontFamily="Consolas" TextWrapping="Wrap"/>
            </StackPanel>
        </TabItem>
    </TabControl>

</UserControl>
