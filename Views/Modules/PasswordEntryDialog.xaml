<Window x:Class="SwissKnifeApp.Views.Modules.PasswordEntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Parola Girişi" Height="550" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Başlık:" Margin="0,5"/>
        <TextBox x:Name="TxtTitle" Grid.Row="0" Margin="100,5,0,5"/>

        <TextBlock Grid.Row="1" Text="Kullanıcı Adı:" Margin="0,5"/>
        <TextBox x:Name="TxtUsername" Grid.Row="1" Margin="100,5,0,5"/>

        <TextBlock Grid.Row="2" Text="Parola:" Margin="0,5"/>
            <Grid Grid.Row="2" Margin="100,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <PasswordBox x:Name="TxtPassword" Grid.Column="0" Visibility="Visible"/>
                <TextBox x:Name="TxtPasswordVisible" Grid.Column="0" Visibility="Collapsed"/>
            <CheckBox x:Name="ChkShowPassword" Grid.Column="1" VerticalAlignment="Top" Margin="5,0,0,0" Content="Parolayı Göster" Checked="ChkShowPassword_Checked" Unchecked="ChkShowPassword_Unchecked"/>
            <Button x:Name="BtnGeneratePassword" Content="🔁 Oluştur" Grid.Column="2" 
                        Click="BtnGeneratePassword_Click" Margin="5,0,0,0"/>
            </Grid>           

        <TextBlock Grid.Row="3" Text="URL:" Margin="0,5"/>
        <TextBox x:Name="TxtUrl" Grid.Row="3" Margin="100,5,0,5"/>

        <TextBlock Grid.Row="4" Text="Kategori:" Margin="0,5"/>
        <ComboBox x:Name="CmbCategory" Grid.Row="4" Margin="100,5,0,5" 
                  DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <TextBlock Grid.Row="5" Text="Son Tarih:" Margin="0,5"/>
        <DatePicker x:Name="DpExpiryDate" Grid.Row="5" Margin="100,5,0,5"/>

        <TextBlock Grid.Row="6" Text="Güç:" Margin="0,5"/>
        <TextBlock x:Name="TxtStrength" Grid.Row="6" Margin="100,5,0,5" FontWeight="Bold"/>

        <TextBlock Grid.Row="7" Text="Notlar:" Margin="0,5"/>
        <TextBox x:Name="TxtNotes" Grid.Row="8" Margin="0,5" 
                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="✅ Kaydet" Click="BtnSave_Click" Width="100" Margin="5,0"/>
            <Button Content="❌ İptal" Click="BtnCancel_Click" Width="100" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>
