<Page x:Class="SwissKnifeApp.Views.Modules.TextSummarizerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      Title="Metin/Belge Özetleyici">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="📝 Metin/Belge Özetleyici ve Anahtar Kelime Bulucu" 
                       FontSize="24" FontWeight="Bold" Foreground="#2196F3"/>
            <TextBlock Text="Uzun metinleri özetle, anahtar kelimeleri ve önemli cümleleri çıkar" 
                       FontSize="14" Foreground="#666" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Ana İçerik -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sol Panel - Giriş Metni -->
            <GroupBox Grid.Column="0" Header="📄 Kaynak Metin">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Dosya Yükleme -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="📁 Dosya Yükle" Click="BtnLoadFile_Click" Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="🗑️ Temizle" Click="BtnClearInput_Click" Padding="10,5"/>
                        <ComboBox x:Name="CmbLanguage" Width="120" Margin="20,0,0,0" SelectedIndex="0">
                            <ComboBoxItem Content="🇹🇷 Türkçe"/>
                            <ComboBoxItem Content="🇬🇧 İngilizce"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Metin Girişi -->
                    <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5">
                        <TextBox x:Name="TxtInputText" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="10"
                                 FontSize="13"
                                 Text="Buraya metninizi yapıştırın veya dosya yükleyin..."/>
                    </Border>

                    <!-- İstatistikler -->
                    <StackPanel Grid.Row="2" Margin="0,10,0,0" Orientation="Horizontal">
                        <TextBlock x:Name="TxtInputStats" Text="Kelime: 0 | Cümle: 0 | Karakter: 0" 
                                   FontSize="12" Foreground="#666"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Sağ Panel - Sonuçlar -->
            <TabControl Grid.Column="2">
                <!-- Özet Sekmesi -->
                <TabItem Header="📋 Özet">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Özet Ayarları -->
                        <GroupBox Grid.Row="0" Header="Özet Ayarları" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Özet Oranı:" VerticalAlignment="Center" Width="100"/>
                                    <Slider x:Name="SliderSummaryRatio" Minimum="10" Maximum="50" Value="30" 
                                            Width="200" TickFrequency="5" IsSnapToTickEnabled="True"
                                            ValueChanged="SliderSummaryRatio_ValueChanged"/>
                                    <TextBlock x:Name="TxtSummaryRatio" Text="30%" VerticalAlignment="Center" 
                                               Margin="10,0,0,0" FontWeight="Bold"/>
                                </StackPanel>
                                <Button Content="✨ Özetle" Click="BtnSummarize_Click" 
                                        Padding="15,8" Margin="0,10,0,0"
                                        Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                        HorizontalAlignment="Left"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Özet Metni -->
                        <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5">
                            <TextBox x:Name="TxtSummary" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     IsReadOnly="True"
                                     Padding="10"
                                     FontSize="13"
                                     Background="#F5F5F5"/>
                        </Border>

                        <!-- Özet İstatistikleri -->
                        <StackPanel Grid.Row="2" Margin="0,10,0,0">
                            <TextBlock x:Name="TxtSummaryStats" Text="Özet oluşturulmadı." 
                                       FontSize="12" Foreground="#666"/>
                            <Button Content="📋 Özeti Kopyala" Click="BtnCopySummary_Click" 
                                    Padding="10,5" Margin="0,10,0,0" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Anahtar Kelimeler Sekmesi -->
                <TabItem Header="🔑 Anahtar Kelimeler">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Anahtar Kelime Ayarları -->
                        <GroupBox Grid.Row="0" Header="Anahtar Kelime Ayarları" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Kelime Sayısı:" VerticalAlignment="Center" Width="120"/>
                                    <mah:NumericUpDown x:Name="NumKeywordCount" Value="10" Minimum="5" Maximum="50" 
                                                       Width="100"/>
                                </StackPanel>
                                <Button Content="🔍 Anahtar Kelimeleri Bul" Click="BtnFindKeywords_Click" 
                                        Padding="15,8" Margin="0,10,0,0"
                                        Background="#FF9800" Foreground="White" FontWeight="Bold"
                                        HorizontalAlignment="Left"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Anahtar Kelimeler Listesi -->
                        <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5">
                            <ListBox x:Name="LstKeywords" FontSize="13" Padding="5">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <TextBlock Text="{Binding Rank}" FontWeight="Bold" 
                                                       Foreground="#2196F3" Width="30"/>
                                            <TextBlock Text="{Binding Word}" FontSize="14" Width="200"/>
                                            <TextBlock Text="{Binding Score, StringFormat='({0:F2})'}" 
                                                       Foreground="#666" Margin="10,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                        <!-- Anahtar Kelime Aksiyonları -->
                        <Button Grid.Row="2" Content="📋 Kelimeleri Kopyala" Click="BtnCopyKeywords_Click" 
                                Padding="10,5" Margin="0,10,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                </TabItem>

                <!-- Önemli Cümleler Sekmesi -->
                <TabItem Header="⭐ Önemli Cümleler">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Önemli Cümle Ayarları -->
                        <GroupBox Grid.Row="0" Header="Önemli Cümle Ayarları" Margin="0,0,0,10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Cümle Sayısı:" VerticalAlignment="Center" Width="120"/>
                                    <mah:NumericUpDown x:Name="NumSentenceCount" Value="5" Minimum="3" Maximum="20" 
                                                       Width="100"/>
                                </StackPanel>
                                <Button Content="⭐ Önemli Cümleleri Bul" Click="BtnFindSentences_Click" 
                                        Padding="15,8" Margin="0,10,0,0"
                                        Background="#9C27B0" Foreground="White" FontWeight="Bold"
                                        HorizontalAlignment="Left"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Önemli Cümleler Listesi -->
                        <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5">
                            <ListBox x:Name="LstSentences" FontSize="13" Padding="5">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="5" Padding="10" Background="#F5F5F5" CornerRadius="5">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                    <TextBlock Text="{Binding Rank}" FontWeight="Bold" 
                                                               Foreground="#9C27B0" FontSize="12"/>
                                                    <TextBlock Text="{Binding Score, StringFormat=' (Skor: {0:F2})'}" 
                                                               Foreground="#666" FontSize="11" Margin="5,0,0,0"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Text}" TextWrapping="Wrap" 
                                                           FontSize="13" LineHeight="20"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                        <!-- Önemli Cümle Aksiyonları -->
                        <Button Grid.Row="2" Content="📋 Cümleleri Kopyala" Click="BtnCopySentences_Click" 
                                Padding="10,5" Margin="0,10,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Page>
